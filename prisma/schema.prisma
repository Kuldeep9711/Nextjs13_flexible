generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  avatarUrl   String
  description String?
  githubUrl   String?
  linkedinUrl String?

  projects    Project[]
}

model Project {
  id            String   @id @default(cuid())
  title         String
  description   String
  image         String
  liveSiteUrl   String
  githubUrl     String
  category      String

  createdById   String
  createdBy     User     @relation(fields: [createdById], references: [id])

  createdAt     DateTime @default(now())
}
